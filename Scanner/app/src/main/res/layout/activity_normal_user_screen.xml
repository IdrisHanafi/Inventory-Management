<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:orientation="vertical"
    android:nestedScrollingEnabled="true">

    <TextView
        android:layout_width="373dp"
        android:text=""
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:text="Add Product Quantity"
        android:id="@+id/bAddQuantity"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:text="Remove Product Quantity"
        android:id="@+id/bRemoveQuantity"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/bChangePassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/bChangePassword"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/bRemoveQuantity"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

</LinearLayout>
